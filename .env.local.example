# UAT Environment Configuration for Sitecore JSS Next.js App
# Copy this file to .env.local and update values as needed

# The public URL for UAT environment (HTTPS for external users via WAF)
PUBLIC_URL=https://uat.kfia.sa

# Sitecore API configuration for UAT
SITECORE_API_KEY=08BECE0B-5FC2-4A9E-A31B-E8AC709A46BF
SITECORE_API_HOST=https://uat-cm.dammamairports.sa

# Site configuration
SITECORE_SITE_NAME=kfia-app
JSS_APP_NAME=kfia-app
DEFAULT_LANGUAGE=en

# Sitecore layout service host
SITECORE_LAYOUT_SERVICE_HOST=https://uat-cm.dammamairports.sa

# Disable SSG fetch for UAT environment
DISABLE_SSG_FETCH=true

# Production environment
NODE_ENV=production
PORT=8080

# Security token for editing
JSS_EDITING_SECRET=08BECE0B5FC24A9EA31BE8AC709A46BF

# Additional JSS configuration
# Use 'normal' for production, 'connected' for development proxy mode
JSS_MODE=normal

# Use REST mode with sxa-jss configuration for full component data
FETCH_WITH=REST
LAYOUT_SERVICE_CONFIGURATION_NAME=sxa-jss

# SSL certificate trust for daco.cm (UAT environment only)
# Disable SSL verification for internal CM server (UAT only)
NODE_TLS_REJECT_UNAUTHORIZED=0
# NODE_EXTRA_CA_CERTS=C:\certs\DACO.cm.crt

# Enable debug logging
DEBUG=sitecore-jss:*
